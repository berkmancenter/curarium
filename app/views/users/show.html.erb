<h1 class="collection-header"><%= @user.name %></h1>

<dl>
  <dt>Member since</dt>
  <dd><%= @user.created_at %></dd>
</dl>

<dl>
  <dt>About <%=@user.name %> </dt>
  <dd><%= @user.bio %></dd>
</dl>
<% if authenticated? && @user == @current_user %>

<section class="user-trays">
  <h1 class="collection-header">Trays</h1>

  <%= render partial: 'trays/tray_preview_gallery', object: @user.trays.limit(2) %>

  <%= link_to raw( '<h2>Tray Manager</h2>' ), user_trays_path( @user ) %>
</section>

<section class="user-circles">
  <h1 class="collection-header">Circles</h1>

  <div class="GALLERY circle-gallery">
  <%= render partial: 'circles/thumbnail', collection: @user.circles %>
  </div><!-- END GALLERY -->  

  <%= link_to raw( '<h2>Circle Manager</h2>' ), circles_path %>
</section>

<% end %>


<section class="user-collections">
  <h1 class="collection-header">Collections</h1>

  <div class="GALLERY">
    <% Collection.administered_by( @user ).each do |collection| %>
      <%= render :partial=>'shared/print_item', :locals=>{:item=>collection} %>
    <% end %>
  </div><!-- END GALLERY -->  

</section>

