<h1>Listing activities</h1>

<table>
  <thead>
    <tr>
      <th>Creator</th>
      <th>Activity type</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.creator.name unless activity.creator.nil? %></td>
        <td><%= activity.activity_type %></td>
        <td><%= activity.body %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

