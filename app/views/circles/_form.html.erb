<%= semantic_form_for @circle do |f| %>

  <%= f.semantic_errors :circle %>

  <%= f.inputs { %>
    <%= f.input :title %>
    <%= f.input :privacy, as: :select, collection: [ 'private', 'community', 'public' ] %>
    <%= f.input :users, as: :check_boxes, collection: User.where.not( id: @current_user.id ) %>
    <%= f.input :description, as: :text, input_html: { cols: 40, rows: 10 } %>
  <% } %>

  <%= f.actions { %>
    <%= f.action :submit, button_html: { class: 'btn btn-default' } %>
  <% } %>

<% end %>
