<script>
	$(document).ready(function(){
		window.record.display( '<%=eval(@record.parsed['image'])[0]%>' );
	});
</script>


<div id='main-canvas'>
</div>

<div id='record-data'>
<p>
  <%= @record.original %>
</p>
<p>
  <%= @record.parsed %>
</p>
</div>
<div id='annotations'>
	<div id='preview_window'></div>
	<%= form_for([@record, @record.annotations.build]) do |f| %>
	  <input name='content[title]'>
	  <textarea name='content[body]'></textarea>
	  <input type='hidden' name='content[x]'>
	  <input type='hidden' name='content[y]'>
	  <input type='hidden' name='content[width]'>
	  <input type='hidden' name='content[height]'>
	  <p>
	    <%= f.submit %>
	  </p>
	<% end %>
</div>