<%= form_for(@section) do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <input id='section_users' name='section[users][0]'>
    <select>
    	<% User.all.each do |user| %>
    		<option value="<%= user.email %>"><%= user.name %></option>
    	<% end %>
    </select>
  </div>

  <div class="field">
    <%= f.label :users %><br>
    <%= f.text_field :users %>
  </div>
  <div class="field">
  	<% @section.resources.each do |key,value|%>
  		<% if ['Collection','Spotlight'].include? key%>
	  		<label for='resources_<%=key%>'><%=key.pluralize%></label>
  			<% key.constantize.all.each do |item| %>
  				<input type='checkbox' value="<%=item.id%>"><%=item.id%></option>
  			<% end %>
	  	<% end %>
  	<%end%>
    <%= f.hidden_field :resources %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
