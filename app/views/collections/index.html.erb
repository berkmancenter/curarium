<!-- BEGIN SUB MENU  (this will maybe become a partial) -->	
<div class="SUB_MENU">
  <div class="expandable">
    Active Collection: 
    <span class="active_collection"><%= active_collection %></span>
  </div>
  <div class="right">
    <div class="orderby"><span>Order:</span><span><%= image_tag "clock_r.png" %><%= image_tag "up_r.png" %><%= image_tag "down_r.png" %></span></div>
    </div>   
 </div> 
<!-- END SUB MENU -->	


<% if flash[:alert] %>
	<p class='button'>
		<%= flash[:alert] %>
	</p>
<% end %>

      
<!-- BEGIN GALLERY -->	     
<div class="GALLERY">
  <% @collections.each do |collection| %>
    <% if collection.approved  %>
      <%= render :partial=>'shared/print_item', :locals=>{:item=>collection} %>
    <% end %>
  <% end %>
  <div class="gallery_item">
    <div class="createnew"> <%= link_to 'New Collection', new_collection_path %> </div>
  </div>
	      
</div><!-- END GALLERY -->  
