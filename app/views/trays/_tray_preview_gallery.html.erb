<!-- BEGIN GALLERY -->	     
<div class="GALLERY">

  <% tray_preview_gallery.each { |tray| %>
    <h2 class="titlebar"><%= tray.name %> <%= link_to( render( partial: 'shared/mini_icon', object: 'close' ), tray, 'data-action' => 'destroy' ) %></h2>

    <%= link_to render( partial: 'trays/tray_preview', object: tray ), user_tray_path( tray.owner, tray ), class: 'tray-preview' %>
  <% } %>

  <%= link_to raw( '<h2>tray manager</h2>' ), user_trays_path( @user || @owner ) unless params[ :controller ] == 'trays' %>

</div>
<!-- END GALLERY -->  
