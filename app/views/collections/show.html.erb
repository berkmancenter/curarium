<% provide :title, @collection.name %>
<div class="container container-show-item">

  <div class="row">
    <div class="col-sm-4 col-md-3 col-lg-2 col-info">
      <h2 class="h5 page-header">Collection</h2>
        <%= render partial: 'collections/thumbnail', object: @collection %>

        <div class="list-group">
          <%= link_to render( partial: 'shared/mini_icon', object: 'spotlight', locals: { icon_title: 'Associated Spotlights' } ), spotlights_path, class: 'list-group-item' %>
          <%= link_to render( partial: 'shared/mini_icon', object: 'explore' ), collection_works_path( @collection ), class: 'list-group-item' %>
        </div>
    </div>

    <div class="col-sm-8 col-md-6 col-lg-7 col-detail">
      <h2 class="h5 page-header"><%= @collection.name %></h2>

      <p><%= @collection.description %></p>

      <h2 class="h5 page-header">At a Glance</h2>

      <%= render partial: 'shared/gallery', object: @all, locals: { col_classes: 'col-xs-6 col-sm-6 col-md-6 col-lg-4' } %>

      <h2 class="h5 page-header">Spotlights</h2>

    </div>

    <div class="col-sm-2 col-md-3 col-activity hidden-sm">
      <h2 class="h5 page-header">Latest Activity</h2>
    </div>

  <%#= render partial: 'shared/gallery', object: @all, locals: { big: @collection } %>

</div>


















